<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/intertech_recyclerview_backcolor"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="16dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:background="@color/intertech_recyclerview_date_backcolor"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="bottom|center_horizontal"
                android:maxLines="1"
                android:text="@string/date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_recyclerview_date_textcolor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/dateMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="13dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:background="@color/intertech_recyclerview_date_backcolor"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:maxLines="1"
                android:maxLength="3"
                android:text="EylÃ¼l"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_recyclerview_date_textcolor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="16dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:background="@color/intertech_recyclerview_date_backcolor"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="top|center_horizontal"
                android:maxLines="1"
                android:text="9:0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_recyclerview_date_textcolor"
                android:textSize="19dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/intertech_recyclerview_backcolor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aliciIsmi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:autoSizeMaxTextSize="16dp"
                android:autoSizeMinTextSize="1dp"
                android:paddingLeft="8dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:fontFamily="sans-serif-black"                android:text="@string/destination_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                />

            <TextView
                android:id="@+id/explanation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16dp"
                android:paddingBottom="10dp"
                android:text="@string/explanation"
                android:paddingLeft="8dp"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/intertech_recyclerview_backcolor"
            android:layout_weight="1.7">
            <TextView
                android:id="@+id/amountValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:text="@string/amount"
                android:autoSizeMaxTextSize="16dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif-black"
                android:maxLines="1"
                android:textColor="@color/intertech_textview_text_color"
                android:textStyle="bold" />
            <Button
                android:id="@+id/showDekont"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginBottom="5dp"
                android:background="@drawable/receipt"
                android:backgroundTint="@color/intertech_textview_text_color" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>