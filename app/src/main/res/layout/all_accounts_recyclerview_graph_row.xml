<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/intertech_screen_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/allAccountsPieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

            <RadioButton
                android:id="@+id/sortingRadioButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/qr_radio_button_not_selected"
                android:button="@drawable/qr_radio_button"
                android:foreground="@drawable/ascending"
                android:checked="false"
                android:textColor="@color/intertech_button_back_color"
                android:textSize="16dp"
                android:textStyle="bold"/>

    </LinearLayout>

</layout>