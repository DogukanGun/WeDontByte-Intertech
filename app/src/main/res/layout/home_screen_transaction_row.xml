<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/intertech_recyclerview_backcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/explanation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:layout_weight="3"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:text="@string/destination_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                android:textStyle="bold" />

            <Button
                android:id="@+id/showDekont"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_settings"
                android:backgroundTint="@color/intertech_button_back_color"
                android:textColor="@color/intertech_button_text_color"
                android:text="@string/receipt" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/dateValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:text="@string/date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                android:textStyle="bold" />
            <TextView
                android:fontFamily="sans-serif-black"
                android:id="@+id/amountValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:textSize="16dp"
                android:layout_weight="3"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="@string/amount"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>