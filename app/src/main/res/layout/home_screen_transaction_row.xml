<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/intertech_recyclerview_backcolor"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.8">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:autoSizeMaxTextSize="16dp"
                    android:autoSizeMinTextSize="1dp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/intertech_recyclerview_date_textcolor"
                    android:background="@color/intertech_recyclerview_date_backcolor"
                    />

                <TextView
                    android:id="@+id/dateMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="EylÃ¼l"
                    android:autoSizeMaxTextSize="13dp"
                    android:autoSizeMinTextSize="1dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/intertech_recyclerview_date_textcolor"
                    android:background="@color/intertech_recyclerview_date_backcolor"
                    />

                <TextView
                    android:id="@+id/dateTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="19dp"
                    android:text="9:0"
                    android:autoSizeMaxTextSize="16dp"
                    android:autoSizeMinTextSize="1dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/intertech_recyclerview_date_textcolor"
                    android:background="@color/intertech_recyclerview_date_backcolor"
                    />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aliciIsmi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="16dp"
                android:autoSizeMaxTextSize="16dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="@string/destination_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                 />

            <TextView
                android:id="@+id/explanation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:textSize="16dp"
                android:text="@string/explanation"
                android:maxLines="1"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                 />


        </LinearLayout>

        <TextView
            android:id="@+id/amountValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/cardview_compat_inset_shadow"
            android:layout_weight="1.8"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:text="@string/amount"
            android:autoSizeMaxTextSize="16dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:textColor="@color/intertech_textview_text_color"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>