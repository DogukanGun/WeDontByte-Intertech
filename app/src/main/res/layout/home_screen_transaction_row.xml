<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/intertech_recyclerview_backcolor"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/dateName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.95"
                android:text="30.05.2020"
                android:maxLines="1"
                android:textSize="16dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@color/intertech_recyclerview_date_backcolor"
                android:textColor="@color/intertech_recyclerview_date_textcolor"/>

            <TextView
                android:id="@+id/dateValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10:30"
                android:textSize="16dp"
                android:layout_weight="2"
                android:gravity="center"
                android:autoSizeMaxTextSize="16dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:background="@color/intertech_recyclerview_date_backcolor"
                android:textColor="@color/intertech_recyclerview_date_textcolor"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aliciIsmi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="16dp"
                android:autoSizeMaxTextSize="16dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="@string/destination_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/explanation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:fontFamily="sans-serif-black"
                android:textSize="16dp"
                android:text="@string/explanation"
                android:autoSizeMaxTextSize="16dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/intertech_textview_text_color"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/amountValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/cardview_compat_inset_shadow"
            android:layout_weight="1.8"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:text="@string/amount"
            android:autoSizeMaxTextSize="16dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:textColor="@color/intertech_textview_text_color"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>